{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "strict": true,
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "functions/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend"
  ]
}
